<Page x:Class="WpfApp1.Pages.ActivatedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        
        <Image Height="80" Width="100"  Grid.Row="0" Grid.Column="0"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="10" FontSize="36" HorizontalAlignment="Center">Название приложения</TextBlock>
        <StackPanel HorizontalAlignment="Right" Grid.Column="2" Grid.Row="0">
            <Button Name="btnAuto" Click="btnAuto_Click" >Авторизация</Button>
            <Button Name="btnReg" Click="btnReg_Click">Регистрация</Button>
        </StackPanel>
    </Grid>
</Page>
