<Page x:Class="WpfApp1.Pages.ActivatedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>        
  
        <StackPanel Margin="10,10,0,0" HorizontalAlignment="Center">
            <StackPanel>
                <Button Name="btnAuto" Content="Авторизация" Template="{StaticResource btnStyle}" Click="btnAuto_Click"/>
            </StackPanel>
            <StackPanel Margin="0,10,0,0">
                <Button Name="btnReg" Content="Регистрация" Template="{StaticResource btnStyle}" Click="btnReg_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
