<Page x:Class="WpfApp1.Pages.AutarizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoPage" FontSize="18">

    <Grid>
        <StackPanel>
            <GroupBox Header="Введите логин">
                <TextBox Name="tboxLogin"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <PasswordBox Name="pbRassword" PreviewTextInput="TextInPasswordBox" ></PasswordBox>
            </GroupBox>
            <Button Click="Button_Click" Content="Авторизация" Template="{StaticResource btnStyle}" Margin="5"/>
            <Button Name="btnBackMain" Content="На главную" Template="{StaticResource btnStyle}" Click="btnBackMain_Click"/>
        </StackPanel>
    </Grid>
</Page>
